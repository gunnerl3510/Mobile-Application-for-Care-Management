@model IEnumerable<Infrastructure.Model.Insurance.AuthorizationNote>

@{
    ViewBag.Title = "Authorization Note List";
}

<h2>Authorization Note List</h2>

@if (ViewBag.InsuranceId == null)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
else
{
    <p>
        @Html.RouteLink("Create New", "AuthorizationNotes", new { insurerid = ViewBag.InsuranceId, authorizationid = ViewBag.AuthorizationId, action = "Create" })
    </p>
}

<table>
    <tr>
        @if (Roles.IsUserInRole("Admin"))
        {
            <th>
                Account Id
            </th>
        }
        <th>
            Authorization Id
        </th>
        <th>
            Note Id
        </th>
        <th>
            Note
        </th>
        <th>
            Created
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        @if (Roles.IsUserInRole("Admin"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.AuthorizationRequestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalCreatedString)
        </td>
        @if (ViewBag.InsuranceId == null)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
        else
        {
            <td>
                @Html.RouteLink("Edit", "AuthorizationNotes", new { insurerid = ViewBag.InsuranceId, authorizationid = item.AuthorizationRequestId, id = item.Id, action = "Edit" }) |
                @Html.RouteLink("Details", "AuthorizationNotes", new { insurerid = ViewBag.InsuranceId, authorizationid = item.AuthorizationRequestId, id = item.Id, action = "Details" }) |
                @Html.RouteLink("Delete", "AuthorizationNotes", new { insurerid = ViewBag.InsuranceId, authorizationid = item.AuthorizationRequestId, id = item.Id, action = "Delete" })
            </td>
        }
    </tr>
}

</table>

@if (ViewBag.InsuranceId != null)
{
    <p>
        @Html.RouteLink("Back to Authorization Request", "InsurerAuthorizations", new { insurerid = ViewBag.InsuranceId, action = "Details", id = ViewBag.AuthorizationId }) |
        @Html.RouteLink("Back to Insurer", "Default", new { controller = "Insurance", action = "Details", id = ViewBag.InsuranceId })
    </p>
}
