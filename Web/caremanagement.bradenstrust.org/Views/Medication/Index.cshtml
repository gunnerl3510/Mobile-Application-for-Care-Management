@model IEnumerable<Infrastructure.Model.Prescription.Medication>

@{
    ViewBag.Title = "Medication List";
}

<h2>Medication List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        @if (Roles.IsUserInRole("Admin"))
        {
            <th>
                AccountId
            </th>
        }
        <th>
            Medication Id
        </th>
        <th>
            Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Units
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (Roles.IsUserInRole("Admin"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DosageUnitsStringValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.RouteLink("Prescription Pickups", "PrescriptionPickups", new { medicationid = item.Id })
        </td>
    </tr>
}

</table>