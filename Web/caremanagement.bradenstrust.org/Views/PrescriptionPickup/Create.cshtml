@model Infrastructure.Model.Prescription.PrescriptionPickup

@{
    ViewBag.Title = "Create Prescription Pickup";
}

<h2>Create Prescription Pickup</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Prescription Pickup</legend>
        
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error">@ViewBag.ErrorMessage</p>
        }
        
        @if (ViewBag.InnerErrorMessage != null)
        {
            <p class="error">@ViewBag.InnerErrorMessage</p>
        }
        
        @Html.HiddenFor(model => model.AccountId)
        
        <div class="display-label">Medication Id</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.MedicationId)
        </div>
        @Html.HiddenFor(model => model.MedicationId)

        <div class="editor-label">
            @Html.LabelFor(model => model.LocalAppointmentDateTimeString)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LocalAppointmentDateTimeString)
            @Html.ValidationMessageFor(model => model.LocalAppointmentDateTimeString)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
