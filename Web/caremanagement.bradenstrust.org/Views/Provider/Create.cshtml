@model Infrastructure.Model.Medical.Provider

@{
    ViewBag.Title = "Create Provider";
}

<h2>Create Provider</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Provider</legend>
        
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error">@ViewBag.ErrorMessage</p>
        }
        
        @if (ViewBag.InnerErrorMessage != null)
        {
            <p class="error">@ViewBag.InnerErrorMessage</p>
        }
        
        @Html.HiddenFor(model => model.AccountId)
        
        <div class="display-label">Facility Id</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.FacilityId)
        </div>
        @Html.HiddenFor(model => model.FacilityId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
