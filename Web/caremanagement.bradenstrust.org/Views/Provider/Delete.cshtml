@model Infrastructure.Model.Medical.Provider

@{
    ViewBag.Title = "Delete Providers";
}

<h2>Delete Providers</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Provider</legend>
        
    @if (ViewBag.ErrorMessage != null)
    {
        <p class="error">@ViewBag.ErrorMessage</p>
    }
        
    @if (ViewBag.InnerErrorMessage != null)
    {
        <p class="error">@ViewBag.InnerErrorMessage</p>
    }
        
    @if (Roles.IsUserInRole("Admin"))
    {
        <div class="display-label">AccountId</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.AccountId)
        </div>
    }

    <div class="display-label">Facility Id</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FacilityId)
    </div>

    <div class="display-label">Provider Id</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Id)
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.HiddenFor(model => model.AccountId)
    @Html.HiddenFor(model => model.CurrentVersion)
    @Html.HiddenFor(model => model.FacilityId)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)

    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
